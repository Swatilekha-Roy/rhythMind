    <style type="text/css">

    body {
      overflow-y: hidden;
      overflow-x: hidden;
      background:url(images/sea_bg.jpg);
      background-repeat: no-repeat;
      background-size: cover;
      height: 100vh;
      width: 100%;
      background-attachment: fixed;
      margin: 0;

    }

    .sea-container {
              background:url(/images/sea_bg.jpg);
        padding: 0;
        margin: 0;

        height: 100%;
        width: 100%;
        
        background-repeat: no-repeat;

        background-size: 100% 100%;
      }
 



    .rain_sound {
        padding-top: 1%;
        float: right;
        z-index: 1000;
        position: absolute;
        margin-left: 72%;
        margin-top: 8px;
        outline: none;
        margin-bottom: 10px;
      }

      .rain-sound:hover,.rain-sound:active,.rain-sound:focus {
        outline: none;
        border: none;
      }

      .rain-btn {
        border-radius: 2rem;
        margin-top: 7px;
        margin-left: 5%;
        padding: 0.5rem 1rem 0.5rem 1rem;
        font-family: 'DotGothic16', sans-serif;
        border: double;
        font-weight: 600;
        cursor: pointer;
        z-index: 200;
        margin-bottom: 2px;
        position: absolute;
        background-color: #ffffff3b;
      }

      .rain-btn:hover,.rain-btn:active,.rain-btn:focus {
        background-color: #ffffff8a !important;
        border-color: #000000;
        color: #000000;
        font-weight: 800;
        outline: none !important;
      }


.wave {
 
  left:0;
  right:0;
  top:0;
  position: absolute;
  bottom:0;
  z-index: 2;
}

.wave + .wave + .wave{
  z-index: 2;
}



body, html{
	height: 100%;
}

/* code for the sun  */
#sun{
	position: absolute;
	top: 45%;
	left: 50%;
	margin: -150px 0 0 -150px;
	width: 180px;
	height: 180px;
}
#sun *, #sun *:before, #sun *:after{
	position: absolute;
}

/* code for the rings */
#rings{
	top: 1%;
	left: 50%;
	z-index: 1;
}
#rings div:before, #rings div:after{
	content: "";
	z-index: 2;
	top: 0;
	left: 0;
	height: inherit;
	width: inherit;
	background: inherit;
}
#rings div:before{
	transform: rotate(60deg);
}
#rings div:after{
	transform: rotate(-60deg);
}
#rings div:nth-child(even){
	animation: rotateR 12s infinite linear;
}
#rings div:nth-child(odd){
	animation: rotateL 12s infinite linear;
	transform: rotate(15deg);
}
#rings div:nth-child(1){
	animation-duration: 45s;
	backgrond: rgba(255, 230, 84, 0.5);
	width: 130px;
	height: 130px;
	margin: -100px 0 0 -100px;
}
#rings div:nth-child(2){
	animation-duration: 49s;
	background: rgba(255, 185, 6, 0.5);
	width: 120px;
	height: 120px;
	margin: -95px 0 0 -95px;
}
#rings div:nth-child(3){
	animation-duration: 56s;
	background: rgba(255, 130, 5, 0.5);
	width: 110px;
	height: 110px;
	margin: -90px 0 0 -90px;
}
#ringsv idiv:nth-child(4){
	animation-duration: 93s;
	background: rgba(255, 90, 0, 0.5);
	width: 100px;
	height: 100px;
	margin: -85px 0 0 -85px;
}

/* animations */
@-webkit-keyframes rotateR{
	from{
		-webkit-transform: rotate(0deg);
	}
	to{
		-webkit-transform: rotate(360deg);
	}
}
@-moz-keyframes rotateR{
	from{
		-moz-transform: rotate(0deg);
	}
	to{
		-moz-transform: rotate(360deg);
	}
}
@-ms-keyframes rotateR{
	from{
		-ms-transform: rotate(0deg);
	}
	to{
		-ms-transform: rotate(360deg);
	}
}
@-o-keygrames rotateR{
	from{
		-o-transform: rotate(0deg);
	}
	to{
		-o-transform: rotate(360deg);
	}
}
@keyframes rotateR{
	from{
		transform: rotate(0deg);
	}
	to{
		transform: rotate(360deg);
	}
}
@-webkit-keyframes rotateL{
	from{
		-webkit-transform: rotate(360deg);
	}
	to{
		-webkit-transform: rotate(0deg);
	}
}
@-moz-keyframes rotateL{
	from{
		-moz-transform: rotate(360deg);
	}
	to{
		-webkit-transform: rotate(0deg);
	}
}
@-ms-keyframes rotateL{
	from{
		-ms-transform: rotate(360deg);
	}
	to{
		-ms-transform: rotate(0deg);
	}
}
@-o-keyframes rotateL{
	from{
		-o-transform: rotate(360deg);
	}
	to{
		-o-transform: rotate(0deg)
	}
}
@keyframes rotateL{
	from{
		transform: rotate(360deg);
	}
	to{
		transform: rotate(0deg);
	}
}

      

    </style>
    
